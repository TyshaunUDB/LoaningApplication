<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .nav-wrapper {
            box-shadow: none;
        }

        .logo {
            max-width : 100% !important;
            height : 2.3em !important;
        }

        body {
            font-family : Campton;
        }

        .bg-primary-color {
            background-color: #0468bb;
        }

        .primary-color {
            color: #0468bb;
        }

        .btn-large {
            border-radius: 30px;
        }

        .action-button {
            border: 2px solid #0468bb;
            background-color: transparent;
            color: #0468bb;
        }

        .action-button:hover {
            background-color: #0468bb;
            color: white;
        }

        .button {
            background-color: #0468bb;
        }

            .button:hover {
                filter: brightness(125%);
                background-color: #0468bb;
            }
    </style>
</head>
<body ng-app="LoaningApplication" ng-controller="LoaningApplicationController" bgcolor="#F0F8FF">

    <div class="navbar-fixed">
    <nav class="transparent z-depth-0">
        <div class="nav-wrapper">
                <a href="#!" class="brand-logo center"><img class="responsive-img logo" src="~/Content/TextLogo.png"></a>
                <ul class="left hide-on-med-and-down" style="font-weight:bold;">
                    <li><a href="#" class="primary-color">Contact Us</a></li>
                    <li><a href="#" class="primary-color">About us</a></li>
                    <li><a href="#" class="primary-color">Testimonials</a></li>
                    <li><a href="#" class="primary-color">Requirements</a></li>
                    <li><a class="waves-effect waves-light btn-large action-button" style="font-family:Campton ExtraBold;">Get a loan</a></li>
                </ul>
                <ul class="right hide-on-med-and-down">
                    <li><a href="#" class="primary-color" style="font-family: Campton ExtraBold">Log in</a></li>
                </ul>
        </div>
    </nav>
    </div>

    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>
</body>
</html>
