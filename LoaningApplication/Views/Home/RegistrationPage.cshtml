@{
    Layout = "~/Views/Shared/_LoaningLayout.cshtml";
}


<style>
    .row.center {
        margin-left: 100px;
        margin-top: 50px;
    }

    .datepicker {
        color : black;
    }
</style>

<div class="row center">
    <div class="col s6 m6 l6"></div>
    <div class="col s5 m5 l5">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card brown lighten-5 z-depth-5">
                    <div class="card-content black-text">
                        <div class="row">
                            <form class="col s12 m12 l12">
                                <div class="row">
                                    <div class="col s12 m12 l12">
                                        <h2 style="font-family: ''; color: #3e2723;">REGISTRATION FORM</h2>
                                    </div>
                                    <div class="col s12 m12 l12">
                                        <p style="font-family: 'gotham'; color: #616161">Please fill out the required fields</p>
                                    </div>
                                    <div class="input-field col s4 m4 l4">
                                        <i class="material-icons prefix">account_circle</i>
                                        <input id="firstName" type="text" class="validate" style="color: black" ng-model="fName" required>
                                        <label for="firstName">First Name *</label>
                                    </div>
                                    <div class="input-field col s4 m4 l4">
                                        <input id="middleName" type="text" class="validate" style="color: black" ng-model="mName">
                                        <label for="middleName">Middle Name</label>
                                    </div>
                                    <div class="input-field col s4 m4 l4">
                                        <input id="lastName" type="text" class="validate" style="color: black" ng-model="lName" required>
                                        <label for="lastName">Last Name *</label>
                                    </div>
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix">email</i>
                                        <input id="email" type="text" class="validate" style="color: black" ng-model="uEmail" required>
                                        <label for="email">Email *</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix">phone</i>
                                        <input id="userPhone" type="tel" class="validate" style="color: black" ng-model="uPhone" required>
                                        <label for="userPhone">Phone No. *</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix">date_range</i>
                                        <input id="userBirthdate" type="text" class="datepicker" style="color: black" ng-model="uBirthdate" required>
                                        <label for="userBirthdate">Birthday *</label>
                                    </div>
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix">location_city</i>
                                        <input id="userAddress" type="text" class="validate" style="color: black" ng-model="uAddress" required>
                                        <label for="userAddress">Address *</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="pass" type="password" class="validate" style="color: black" ng-model="uPass" required>
                                        <label for="pass">Password *</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="confirmpass" type="password" class="validate" style="color: black" ng-model="confirmPass" required>
                                        <label for="confirmpass">Confirm Password *</label>
                                    </div>
                                    <div class="col s12 m12 l12 center">
                                        <div class="col s6 m6 l6"></div>
                                        <div class="col s6 m6 l6">
                                            <a class="waves-effect waves-light btn-large col s12 m12 l12 brown" ng-click="validationFunc()"><i class="material-icons left">send</i>Next</a>
                                        </div>
                                        <div class="col s12 m12 l12">
                                            <p class="black-text">Already have an account?
                                            <a href="/Home/LoginPage">Log in</a></p>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s1 m1 l1"></div>
</div>

<script>
    var currDate = new Date();
    var legalDate = new Date();
    legalDate.setFullYear(currDate.getFullYear() - 18)

    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('.datepicker');
        var instances = M.Datepicker.init(elems, {
            defaultDate: legalDate,
            maxDate: new Date(legalDate),
            yearRange: [1950, currDate.getFullYear()]
        });
    });
</script>