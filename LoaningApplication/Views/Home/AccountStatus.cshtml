@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="row">
    <div class="col s12 m12 l12">
        <div id="deleteConfirm" class="modal">
            <div class="modal-content">
                <h4>Delete Account</h4>
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">NO</a>
                <a class="red waves-effect waves-green btn-flat" ng-click="deleteAccStat()">YES</a>
            </div>
        </div>

        <!-- Add Account Modal -->
        <div id="addAccStatModal" class="modal">
            <div class="modal-content">
                <h4>Add Account</h4>
                <form class="col s12 m12 l12" ng-submit="addAccStat()">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="firstName" type="text" class="validate" ng-model="newAcc.firstName" required>
                            <label for="firstName">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="middleName" type="text" class="validate" ng-model="newAcc.middleName">
                            <label for="middleName">Middle Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="lastName" type="text" class="validate" ng-model="newAcc.lastName" required>
                            <label for="lastName">Last Name</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">email</i>
                            <input id="email" type="email" class="validate" ng-model="newAcc.email" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">phone</i>
                            <input id="contact" type="text" class="validate" ng-model="newAcc.contact" required>
                            <label for="contact">Contact</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">calendar_today</i>
                            <input id="birthday" type="date" class="validate" ng-model="newAcc.birthday" required>
                            <label for="birthday">Birthday</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">home</i>
                            <input id="address" type="text" class="validate" ng-model="newAcc.address" required>
                            <label for="address">Address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">work</i>
                            <input id="role" type="text" class="validate" ng-model="newAcc.role" required>
                            <label for="role">Role</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
                <button type="submit" class="waves-effect waves-green btn-flat">Add</button>
            </div>
        </div>


        <div id="editAccStatModal" class="modal">
            <div class="modal-content">
                <h4>Edit Status</h4>
                <form class="col s12 m12 l12">
                    <div class="row">
                        <div class="input-field col s4 m4 l4">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="statusName" type="text" class="validate active" style="color: black" ng-model="editAccStatName" required>
                            <label for="statusName">Status Name</label>
                        </div>
                        <div class="input-field col s6 m6 l6">
                        </div>
                        <div class="input-field col s6 m6 l6">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="deleteConfirm" class="modal-trigger waves-effect waves-green btn-flat" style="color: red;">Delete</a>
                <a href="#!" class="waves-effect waves-green btn-flat" ng-click="updateAccStat()">Save</a>
            </div>
        </div>

        <div class="table-container" ng-init="getaccStat()">

            <!-- Add Button -->
            <div class="left-align">
                <a class="button waves-effect waves-light btn modal-trigger" href="#addAccStatModal">
                    <i class="material-icons left">add</i>ADD
                </a>
            </div>


            <table id="accountstatusTable" class="display">
                <thead>
                    <tr>
                        <th>Status ID</th>
                        <th>Status Name</th>
                        <th>Last Updated</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="accountstatus in accstat">
                        <td>{{accountstatus.StatusID}}</td>
                        <td>{{accountstatus.StatusName}}</td>
                        <td>{{accountstatus.UpdateAt}}</td>
                        <td>{{accountstatus.CreateAt}}</td>
                        <td>
                            <input type="hidden" id="custId" name="custId" value="AccountID">
                            <a class="btn-flat primary-color" style="display: flex; align-items: center; text-decoration: none;" ng-click="editAccStat(accountstatus)">
                                <i class="material-icons" style="margin-right: 5px;">create</i>
                                <span>Edit</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var modals = document.querySelectorAll('.modal');
        M.Modal.init(modals);
</script>
