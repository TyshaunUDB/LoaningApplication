@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="row">
    <div class="col s12 m12 l12">
        <div id="deleteConfirm" class="modal">
            <div class="modal-content">
                <h4>Delete Account</h4>
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">NO</a>
                <a class="red waves-effect waves-green btn-flat" ng-click="deleteAccStat()">YES</a>
            </div>
        </div>

        <div id="editAccStatModal" class="modal">
            <div class="modal-content">
                <h4>Edit Status</h4>
                <form class="col s12 m12 l12">
                    <div class="row">
                        <div class="input-field col s4 m4 l4">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="accstatusName" type="text" class="validate active" style="color: black" ng-model="accstatusName" required>
                            <label for="accstatusName">Status Name</label>
                        </div>
                        <div class="input-field col s6 m6 l6">
                        </div>
                        <div class="input-field col s6 m6 l6">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="deleteConfirm" class="modal-trigger waves-effect waves-green btn-flat" style="color: red;">Delete</a>
                <a href="#!" class="waves-effect waves-green btn-flat" ng-click="updateAccStat()">Save</a>
            </div>
        </div>

        <div class="table-container" ng-init="getRoles()">

            <div class="left-align">
                <a class="button waves-effect waves-light btn"><i class="material-icons left">add</i>ADD</a>
            </div>

            <table id="rolesTable" class="display">
                <thead>
                    <tr>
                        <th>Role ID</th>
                        <th>Role Name</th>
                        <th>Last Updated</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="roles in role">
                        <td>{{roles.RoleID}}</td>
                        <td>{{roles.RoleName}}</td>
                        <td>{{roles.UpdateAt}}</td>
                        <td>{{roles.CreateAt}}</td>
                        <td>
                            <input type="hidden" id="custId" name="custId" value="AccountID">
                            <a class="btn-flat primary-color" style="display: flex; align-items: center; text-decoration: none;" ng-click="editAccStat(accountstat)">
                                <i class="material-icons" style="margin-right: 5px;">create</i>
                                <span>Edit</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var modals = document.querySelectorAll('.modal');
        M.Modal.init(modals);
</script>
